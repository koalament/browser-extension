{
  "name": "Koalament",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Koala open comment",
  "homepage_url": "https://koalament.io",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Koalament",
    "default_icon": "assets/koala.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "activeTab"
  ]
}